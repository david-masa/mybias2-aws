.chat-side
  .side-header
    .side-header__title
      = image_tag('logo-mybias.png', options = {alt: 'mybias', height: '80px', width: '240px', class: ''})
    .side-header__box
      %p.side-header__box__user-name
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-group
          = link_to new_genre_path do
            = icon('far', 'edit',class: "icon")
        %li.side-header__box__menu__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .genres
    - current_user.genres.each do |genre|
      .genre
        = link_to genre_posts_path(genre) do
          .genre__genre-name
            = genre.name
          .genre__latest-post
